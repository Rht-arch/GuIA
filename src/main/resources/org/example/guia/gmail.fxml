<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.guia.Controladores.GmailController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">
            <children>
                <Label text="Cliente Gmail Básico (API)" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <HBox alignment="CENTER" spacing="15.0">
                    <Button fx:id="loadEmailsButton" mnemonicParsing="false" onAction="#handleLoadEmails" text="Cargar Emails / Iniciar Sesión" />
                    <Button fx:id="composeButton" mnemonicParsing="false" onAction="#handleComposeEmail" text="Redactar" disable="true"/>
                    <ProgressIndicator fx:id="progressIndicator" visible="false" prefHeight="25" prefWidth="25"/>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <SplitPane fx:id="mainSplitPane" dividerPositions="0.4" BorderPane.alignment="CENTER">
            <items>
                <ListView fx:id="emailListView" prefWidth="300.0" />
                <WebView fx:id="emailContentView" prefWidth="600.0" />
            </items>
        </SplitPane>
    </center>
    <bottom>
        <GridPane fx:id="composePane" hgap="10.0" vgap="10.0" style="-fx-padding: 15; -fx-border-color: lightgray; -fx-border-width: 1 0 0 0;"
                  visible="false" managed="false"> <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="60.0" /> <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" /> </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="ALWAYS" /> <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" /> </rowConstraints>

            <Label text="Para:" GridPane.rowIndex="0" />
            <TextField fx:id="toField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Asunto:" GridPane.rowIndex="1" />
            <TextField fx:id="subjectField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Mensaje:" GridPane.rowIndex="2" GridPane.valignment="TOP"/>
            <TextArea fx:id="bodyArea" wrapText="true" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />

            <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <children>
                    <ProgressIndicator fx:id="sendProgressIndicator" visible="false" prefHeight="25.0" prefWidth="25.0"/>
                    <Button fx:id="cancelComposeButton" mnemonicParsing="false" onAction="#handleCancelCompose" text="Cancelar" />
                    <Button fx:id="sendButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSendEmail" text="Enviar" />
                </children>
            </HBox>
        </GridPane>
    </bottom>
</BorderPane>