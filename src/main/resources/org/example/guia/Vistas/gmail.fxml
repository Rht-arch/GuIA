<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="700.0" prefWidth="900.0" stylesheets="@../Css/gmail.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.guia.Controladores.GmailController">
    <top>
        <VBox styleClass="header-container">
            <children>
                <Label styleClass="title-label" text="Gmail"/>
                <HBox styleClass="toolbar-container">
                    <Button fx:id="loadEmailsButton" styleClass="action-button" mnemonicParsing="false" onAction="#handleLoadEmails" text="Cargar Emails / Iniciar SesiÃ³n"/>
                    <Button fx:id="composeButton" styleClass="action-button" mnemonicParsing="false" onAction="#handleComposeEmail" text="Redactar" disable="true"/>
                    <ProgressIndicator fx:id="progressIndicator" styleClass="progress-indicator" prefHeight="25" prefWidth="25" visible="false"/>
                </HBox>
                <HBox styleClass="nav-container">
                    <Button fx:id="btnVolver" styleClass="nav-button" mnemonicParsing="false" onAction="#volveratras" text="Volver"/>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <SplitPane fx:id="mainSplitPane" styleClass="main-split-pane" dividerPositions="0.4">
            <items>
                <ListView fx:id="emailListView" styleClass="email-list" prefWidth="300.0"/>
                <WebView fx:id="emailContentView" styleClass="email-content" prefWidth="600.0"/>
            </items>
        </SplitPane>
    </center>
    <bottom>
        <GridPane fx:id="composePane" styleClass="compose-panel" hgap="10.0" vgap="10.0" managed="false" visible="false">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="60.0"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
            </rowConstraints>

            <Label styleClass="compose-label" text="Para:" GridPane.rowIndex="0"/>
            <TextField fx:id="toField" styleClass="compose-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label styleClass="compose-label" text="Asunto:" GridPane.rowIndex="1"/>
            <TextField fx:id="subjectField" styleClass="compose-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label styleClass="compose-label" text="Mensaje:" GridPane.rowIndex="2" GridPane.valignment="TOP"/>
            <TextArea fx:id="bodyArea" styleClass="compose-textarea" wrapText="true" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2"/>

            <HBox styleClass="button-container" alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <children>
                    <ProgressIndicator fx:id="sendProgressIndicator" styleClass="progress-indicator" prefHeight="25.0" prefWidth="25.0" visible="false"/>
                    <Button fx:id="cancelComposeButton" styleClass="secondary-button" mnemonicParsing="false" onAction="#handleCancelCompose" text="Cancelar"/>
                    <Button fx:id="sendButton" styleClass="primary-button" defaultButton="true" mnemonicParsing="false" onAction="#handleSendEmail" text="Enviar"/>
                </children>
            </HBox>
        </GridPane>
    </bottom>
</BorderPane>