<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" styleClass="scroll-pane" stylesheets="@../Css/registro.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.guia.Controladores.Registro">

   <VBox alignment="TOP_CENTER" spacing="15" styleClass="form-container">
      <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

      <!-- Título -->
      <Label styleClass="form-title" text="GuIA" />

      <!-- Campos del formulario -->
      <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" prefWidth="100" />
            <ColumnConstraints hgrow="ALWAYS" prefWidth="200" />
         </columnConstraints>

         <!-- Fila: Nombre -->
         <Label styleClass="form-label" text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <TextField fx:id="txtNombre" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

         <!-- Fila: Apellido -->
         <Label styleClass="form-label" text="Apellido:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
         <TextField fx:id="txtApellido" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

         <!-- Fila: Empresa -->
         <Label styleClass="form-label" text="Empresa:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
         <TextField fx:id="txtEmpresa" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />

         <!-- Fila: Email -->
         <Label styleClass="form-label" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
         <TextField fx:id="txtEmail" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

         <!-- Fila: Contraseña -->
         <Label styleClass="form-label" text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
         <PasswordField fx:id="txtPassword" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>

      <!-- Sección de imagen -->
      <VBox alignment="CENTER_LEFT" spacing="10">
         <Label styleClass="form-label" text="Imagen:" />
         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fx:id="imgPerfil" fitHeight="100" fitWidth="100" styleClass="profile-image" />
            <Button fx:id="btnSeleccionarImagen" onAction="#seleccionarImagen" styleClass="image-button" text="Seleccionar imagen" />
         </HBox>
      </VBox>

      <!-- Sección de teléfono -->
      <HBox alignment="CENTER_LEFT" spacing="10">
         <Label styleClass="form-label" text="Teléfono:" />
         <ComboBox fx:id="cbCodigoPais" prefWidth="70" styleClass="country-combo" />
         <TextField fx:id="txtTelefono" prefWidth="200" styleClass="form-field" />
      </HBox>

      <!-- Términos y condiciones -->
      <CheckBox fx:id="checkTerminos" styleClass="terms-check" text="Acepto los términos y condiciones y la política de privacidad" />

      <!-- Botón de registro -->
      <Button fx:id="btnRegistrar" onAction="#registrarEmpleado" styleClass="register-button" text="Registrarse" />

      <!-- Enlace para login -->
      <HBox alignment="CENTER" spacing="5">
         <Label styleClass="login-label" text="¿Ya tienes cuenta?" />
         <Hyperlink fx:id="linkLogin" onMouseClicked="#irALogin" styleClass="login-link" text="Inicia sesión" />
      </HBox>
   </VBox>
</ScrollPane>
